# SpinUp Production Environment Configuration
# Copy this to .env and update with your production values

# ====================================
# DATABASE
# ====================================
DATABASE_URL=postgresql://spinup:CHANGE_ME_STRONG_PASSWORD@postgres:5432/spinup

# ====================================
# API CONFIGURATION
# ====================================
# Generate with: openssl rand -hex 32
API_JWT_SECRET=CHANGE_ME_GENERATE_STRONG_RANDOM_SECRET_MIN_32_CHARS
SERVICE_TOKEN=CHANGE_ME_GENERATE_STRONG_RANDOM_TOKEN_MIN_32_CHARS

# API server port (internal)
API_PORT=8080

# Public API URL (accessible from outside)
API_URL=https://api.yourdomain.com

# ====================================
# WEB CONFIGURATION
# ====================================
# Public web app URL
WEB_ORIGIN=https://yourdomain.com

# Internal web dev server port (only for development)
VITE_PORT=5173

# API endpoint for web app
VITE_API_URL=https://api.yourdomain.com

# ====================================
# DISCORD BOT (Optional)
# ====================================
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=https://yourdomain.com/auth/discord/callback

# ====================================
# REDIS
# ====================================
REDIS_HOST=redis
REDIS_PORT=6379

# ====================================
# DATA STORAGE
# ====================================
# Path where game server data is stored
DATA_DIR=/srv/spinup

# ====================================
# ENVIRONMENT
# ====================================
NODE_ENV=production

# ====================================
# DOCKER
# ====================================
# Docker host (usually unix socket or tcp)
DOCKER_HOST=unix:///var/run/docker.sock

# ====================================
# SECURITY
# ====================================
# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# Session duration (milliseconds)
SESSION_MAX_AGE=86400000
