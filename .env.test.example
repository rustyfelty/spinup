# SpinUp Test Environment Configuration
# Copy this to .env.test for running tests

# Database (use separate test database to avoid polluting dev data)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/spinup_test"

# Redis
REDIS_URL="redis://localhost:6379"

# API Configuration
API_PORT=8080
API_JWT_SECRET="test-jwt-secret-key-for-testing-must-be-at-least-32-characters-long"
SERVICE_TOKEN="test-service-token-for-discord-bot-must-be-32-chars-minimum"

# Web App
WEB_ORIGIN="http://localhost:5173"
VITE_API_URL="http://localhost:8080"

# Data Storage (for Docker volumes)
DATA_DIR="/tmp/spinup-test"

# Environment
NODE_ENV="test"

# Test-specific settings
VITEST="true"

# Optional: Separate test database URL for isolation
DATABASE_URL_TEST="postgresql://postgres:postgres@localhost:5433/spinup_test"

# Disable logging during tests for cleaner output
LOG_LEVEL="error"
